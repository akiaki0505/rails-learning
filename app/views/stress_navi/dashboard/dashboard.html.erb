<% content_for(:title, 'Dashboard') %>
<main class="flex-1 overflow-y-auto p-6 md:p-8 bg-gray-100">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Dashboard</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-sm font-medium mb-2">Total Users</h3>
            <p class="text-3xl font-bold text-gray-800"><%= @user_count %></p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-sm font-medium mb-2">Weekly Stress Checks</h3>
            <p class="text-3xl font-bold text-sky-600">892</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-sm font-medium mb-2">Alerts</h3>
            <p class="text-3xl font-bold text-red-500">15</p>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 h-96">
        <h2 class="text-lg font-bold text-gray-800 mb-4">最近のアクティビティ</h2>
        <p class="text-gray-600">ここにコンテンツが入ります...</p>
    </div>
</main>