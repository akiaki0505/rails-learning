<% content_for(:title, 'Sign in') %>
<div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-sm mx-4">
    <div class="flex flex-col items-center mb-8">
        <div class="p-3 mb-3">
            <%= image_tag "logo.png", class: "w-24 h-auto"%>
        </div>
        <h2 class="text-2xl font-bold text-gray-700">Sign in to stressNavi</h2>
        <p class="text-sm text-gray-400 mt-1">Please sign in to your account.</p>

        <% if flash[:alert] %>
        <div class="mt-2 text-red-500 text-sm text-center">
            <%= flash[:alert] %>
        </div>
        <% end %>

        <% if flash[:notice] %>
        <div class="mt-2 text-red-500 text-sm text-center">
            <%= flash[:notice] %>
        </div>
        <% end %>
    </div>
    
    <%= form_with url: stress_navi_login_path, local: false, data: { turbo: false }, class: "space-y-6" do |f| %>
        <div>
            <%= f.label :email, "Email Address", for: "session_email", class: "block text-sm font-medium text-gray-700 mb-1" %>
            
            <%= f.email_field :email, 
                id: "session_email",
                placeholder: "example@email.com",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-400 focus:border-transparent transition duration-200 placeholder-gray-400" 
            %>
        </div>

        <div>
            <div class="flex items-center justify-between mb-1">
                <%= f.label :password, for: "session_password", class: "block text-sm font-medium text-gray-700" %>
            </div>
            <%= f.password_field :password, 
                id: "session_password",
                placeholder: "••••••••",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-400 focus:border-transparent transition duration-200 placeholder-gray-400" 
            %>
            <div class="text-right">
                <%= link_to "Forgot password?", "#", class: "text-xs text-sky-500 hover:text-sky-600 hover:underline" %>
            </div>
        </div>

        <%= f.submit "Sign in", class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-semibold py-3 px-4 rounded-lg cursor-pointer" %>
    <% end %>
</div>