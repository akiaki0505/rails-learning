<% content_for(:title, 'Department Mapping') %>

<main class="flex-1 overflow-y-auto p-6 md:p-8 bg-gray-100">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Department Mapping</h1>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <%= form_with url: finalize_import_stress_navi_employees_path, method: :post, local: true do |f| %>
        <%= hidden_field_tag :file_id, @file_id %>

        <div class="p-8">
          <p class="text-sm text-gray-600 mb-6">Please map the department names in the CSV to the corresponding departments in the system.</p>

          <table class="w-full text-sm">
            <thead>
              <tr class="bg-gray-50 text-gray-600 text-left">
                <th class="p-4 font-semibold">Department Name in CSV</th>
                <th class="p-4 font-semibold">Select System Department</th>
              </tr>
            </thead>
            <tbody>
              <% @unique_depts.each do |csv_name| %>
                <tr class="border-b border-gray-100">
                  <td class="p-4 font-medium text-gray-700"><%= csv_name %></td>
                  <td class="p-4">
                        <%= select_tag "mapping[#{csv_name}]", 
                            options_from_collection_for_select(@system_depts, :id, :name, @system_depts.find_by(name: csv_name)&.id),
                            include_blank: "-- Select System Department --",
                            class: "w-full border-2 border-gray-100 bg-gray-50 rounded-lg shadow-sm py-4 px-5 text-gray-700 font-medium cursor-pointer transition-all duration-200 hover:border-sky-400 hover:bg-white focus:border-sky-500 focus:ring focus:ring-sky-100 focus:bg-white focus:outline-none" %>
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-100">
            <%= link_to "Cancel", stress_navi_employees_path, class: "text-gray-500 hover:underline" %>
            <%= f.submit "Complete Import", 
                class: "bg-sky-600 hover:bg-sky-700 text-white font-medium py-2 px-6 rounded-lg shadow-sm hover:shadow transition-all duration-200 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>