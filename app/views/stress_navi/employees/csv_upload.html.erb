<% content_for(:title, 'Bulk User Upload') %>

<main class="flex-1 overflow-y-auto p-6 md:p-8 bg-gray-100 relative" data-controller="csv-upload">

    <h1 class="text-2xl font-bold text-gray-800 mb-6">Bulk User Upload</h1>

    <div id="result-area" data-csv-upload-target="results" class="hidden mb-6">
        <div id="status-box" class="p-4 rounded-md border-l-4 bg-white shadow-sm">
            <h3 class="text-sm whitespace-pre-line" data-csv-upload-target="message"></h3>
            
            <div class="mt-2 text-sm text-red-700 max-h-60 overflow-y-auto">
                <ul class="list-disc pl-5 space-y-1" data-csv-upload-target="errorList">
                </ul>
            </div>
        </div>
    </div>

    <div data-csv-upload-target="loading" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white p-8 rounded-xl shadow-2xl flex flex-col items-center">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-sky-600 mb-4"></div>
            <p class="text-gray-700 font-medium">Validating and Registering...</p>
            <p class="text-gray-400 text-xs mt-2">Please do not close this window.</p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        <div class="p-8">
            <div class="mb-10 p-6 bg-sky-50 rounded-lg border border-sky-100">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-bold text-sky-900">Step 1: Download Format</h3>
                        <p class="text-sm text-sky-700 mt-1">Please download the template below and enter the user information.</p>
                        <div class="mt-4">
                            <%= link_to download_format_stress_navi_employees_path, class: "inline-flex items-center px-4 py-2 bg-white border border-sky-200 rounded-md text-sm font-medium text-sky-700 hover:bg-sky-100 transition-colors shadow-sm", data: { turbo: false } do %>
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                CSV Template Download
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="text-sm font-bold text-gray-700 mb-4">Step 2: Upload CSV File</h3>
            
            <%= form_with url: import_csv_stress_navi_employees_path, 
                          method: :post, 
                          local: true, 
                          class: "space-y-6",
                          data: { 
                            csv_upload_target: "form",
                            action: "submit->csv-upload#submit"
                          } do |f| %>
                
                <div class="flex items-center justify-center w-full">
                    <label class="flex flex-col items-center justify-center w-full h-48 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-all">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-10 h-10 mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
                            <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                            <p class="text-xs text-gray-400">CSV file only</p>
                        </div>
                        <%= f.file_field :file, 
                                        class: "hidden", 
                                        accept: ".csv", 
                                        required: true, 
                                        data: { action: "change->csv-upload#updateFileName" } %>
                        <div data-csv-upload-target="fileName" class="mt-2 text-sm text-sky-600 font-medium"></div>
                    </label>
                </div>

                <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-100">
                    <%= link_to "Cancel", stress_navi_employees_path, class: "text-gray-500 hover:text-gray-700 text-sm font-medium px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors" %>
                    <%= f.submit "Upload and Register", 
                        class: "bg-sky-600 hover:bg-sky-700 text-white font-medium py-2 px-6 rounded-lg shadow-sm hover:shadow transition-all duration-200 cursor-pointer" %>
                </div>
            <% end %>
        </div>
    </div>
</main>